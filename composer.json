{
  "name": "netric/netric-server",
  "description": "Netric Server",
  "license": "Commercial",
  "homepage": "http://www.netric.com/",
  "autoload": {
    "psr-4": {
      "Netric\\": "src/Netric"
    }
  },
  "scripts": {
    "lint-fix": "phpcbf",
    "test": "vendor/bin/phpunit",
    "test-ci": [
      "@composer lint",
      "@composer test"
    ],
    "lint": [
      "@lint-phpmd",
      "@lint-phpcs"
    ],
    "lint-phpcs": "phpcs",
    "lint-phpmd": "phpmd ./src/Netric xml ./phpmd.xml --reportfile .reports/pmd.xml"
  },
  "require": {
    "php": ">=7.2",
    "facebook/php-sdk-v4": "4.0.*",
    "zendframework/zend-crypt": "~2.5",
    "zendframework/zend-validator": "~2.5",
    "zendframework/zend-console": "~2.5",
    "zendframework/zend-http": "~2.5",
    "zendframework/zend-loader": "~2.5",
    "zircote/swagger-php": "^2.0",
    "php-mime-mail-parser/php-mime-mail-parser": "^2.4",
    "authorizenet/authorizenet": "^1.9",
    "graylog2/gelf-php": "^1.5",
    "ramsey/uuid": "^3.7",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^8",
    "phpmd/phpmd": "@stable",
    "squizlabs/php_codesniffer": "3.*"
  }
}
