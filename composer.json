{
  "name": "netric/netric-server",
  "description": "Netric Server",
  "license": "Commercial",
  "homepage": "http://www.netric.com/",
  "autoload": {
    "psr-4": { "Netric\\": "src/Netric" }
  },
  "scripts": {
    "lint": ["@lint-phpmd", "@lint-phpcs"],
    "lint-phpcs":
      "./vendor/bin/phpcs -p --standard=PSR2 --report=checkstyle --report-file=./tests/tmp/checkstyle.xml ./src/Netric",
    "lint-phpmd":
      "./vendor/bin/phpmd ./src/Netric xml cleancode,codesize,controversial,design,naming,unusedcode --reportfile ./tests/tmp/pmd.xml"
  },
  "require": {
    "php": ">=7.0",
    "facebook/php-sdk-v4": "4.0.*",
    "zendframework/zend-crypt": "~2.5",
    "zendframework/zend-validator": "~2.5",
    "zendframework/zend-console": "~2.5",
    "zendframework/zend-http": "~2.5",
    "zendframework/zend-loader": "~2.5",
    "zircote/swagger-php": "^2.0",
    "php-mime-mail-parser/php-mime-mail-parser": "^2.4",
    "authorizenet/authorizenet": "^1.9",
    "graylog2/gelf-php": "^1.5"
  },
  "require-dev": {
    "phpunit/phpunit": "6.2.*",
    "phpmd/phpmd": "@stable",
    "squizlabs/php_codesniffer": "3.*",
    "johnkary/phpunit-speedtrap": "^2.0.0-BETA1"
  }
}
